###############################################################################
# E-Commerce Backend - Environment Configuration
###############################################################################

#------------------------------------------------------------------------------
# APPLICATION SETTINGS
#------------------------------------------------------------------------------
APP_NAME="E-Commerce API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Istanbul
FRONTEND_URL=http://localhost:3000

APP_LOCALE=tr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=tr_TR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

#------------------------------------------------------------------------------
# DATABASE - MySQL
#------------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ecommerce
DB_USERNAME=ecommerce_user
DB_PASSWORD=secret_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

#------------------------------------------------------------------------------
# REDIS - Cache, Session, Queue
#------------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SESSION_DB=3

#------------------------------------------------------------------------------
# CACHE - Redis
#------------------------------------------------------------------------------
CACHE_STORE=redis
CACHE_PREFIX=ecommerce_cache_

#------------------------------------------------------------------------------
# SESSION - Redis
#------------------------------------------------------------------------------
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

#------------------------------------------------------------------------------
# QUEUE - Redis (Horizon)
#------------------------------------------------------------------------------
QUEUE_CONNECTION=redis
HORIZON_PREFIX=ecommerce_horizon:

#------------------------------------------------------------------------------
# LOGGING - ELK Stack
#------------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=daily,stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#------------------------------------------------------------------------------
# ELASTICSEARCH
#------------------------------------------------------------------------------
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_INDEX_PREFIX=ecommerce_

#------------------------------------------------------------------------------
# MAIL
#------------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@ecommerce.local"
MAIL_FROM_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# SANCTUM
#------------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1

#------------------------------------------------------------------------------
# SWAGGER
#------------------------------------------------------------------------------
L5_SWAGGER_GENERATE_ALWAYS=true

#------------------------------------------------------------------------------
# BROADCASTING & FILESYSTEM
#------------------------------------------------------------------------------
BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local

#------------------------------------------------------------------------------
# AWS (Optional)
#------------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# PAYTR - Payment Gateway
#------------------------------------------------------------------------------
PAYTR_MERCHANT_ID=
PAYTR_MERCHANT_KEY=
PAYTR_MERCHANT_SALT=
PAYTR_TEST_MODE=true
